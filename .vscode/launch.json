{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start python uten dato",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "justMyCode": true,
            "args": ["-r", "B109", "-s 11:00", "-e 12:00"]
        },
        {
            "name": "Start python med dato",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "justMyCode": true,
            "args": [
                "-r",
                "M423",
                "-s",
                "12:15",
                "-e",
                "15:15",
                "--dato=20230330",
                "-v"
            ]
        },
        {
            "name": "Start python be om hjelp",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "justMyCode": true,
            "args": ["-h"]
        },
        {
            "name": "Start python uten argumenter",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "justMyCode": true,
            "args": []
        },
        {
            "type": "node-terminal",
            "name": "Start discord bot",
            "request": "launch",
            "command": "npm run start",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Deploy discord bot commands",
            "request": "launch",
            "command": "npm run deploy",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "cwd": "${workspaceFolder}"
        }
    ]
}
